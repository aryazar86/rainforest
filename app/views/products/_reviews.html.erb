<% @product.reviews.each do |review| %>
  <% if review.comment && !review.new_record? %>
    <div class="review">
      <div class="review-comment"><%= review.comment %></div>
      <% if review.user != nil %>
        <span class="review-info"><em> by <%= review.user.name %></em>
        Added on: <%= review.created_at %></span>
      <% end %>
    </div>
  <% end %>
<% end %>